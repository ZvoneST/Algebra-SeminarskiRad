
@using (Html.BeginForm("Predbiljezbe", "Predbiljezba", FormMethod.Get, new { @class = "form-inline" }))
{
    <div class="form-group mr-label">
        @Html.Label("Pretraživanje po statusu:", htmlAttributes: new { @class = "control-label search-text" })
    </div>
    <br />
    <br />
    <div class="form-group mr-right">
        @Html.DropDownList((string)Model.s)
        <input type="text" name="pretraga" placeholder="Pretraži seminar..." class="form-control search-box" />
    </div>

    <div class="form-group mr-right">
        <input type="submit" value="Pretraži" class="btn btn-default" />
    </div>
    <div class="form-inline"></div>

}

