@model IPagedList<SeminarskiRad.Models.Seminar>

@using PagedList;

@using PagedList.Mvc;

@{
    ViewBag.Title = "Seminari";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Seminari</h2>

<table class="table">
    @Html.PagedListPager(Model, pageNumber => Url.Action("Index", new { pageNumber, opcija = Request.QueryString["opcija"], pretraga = Request.QueryString["pretraga"] }))

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Opis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Datum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().BrojPolaznika)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Popunjen)
        </th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="5" class="text-center">
                <br />
                <h3><b>Traženi unos nije pronađen</b></h3>
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    <b>@Html.DisplayFor(modelItem => item.Naziv)</b>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Opis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Datum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BrojPolaznika)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Popunjen)
                </td>
                <td>
                    @Html.ActionLink("Uredi", "Edit", new { id = item.IdSeminar }) |
                    @Html.ActionLink("Detalji", "Details", new { id = item.IdSeminar }) |
                    @Html.ActionLink("Obriši", "Delete", new { id = item.IdSeminar })
                </td>
            </tr>
        }
    }
</table>
<hr />
@Html.Partial("_SeminarSearch")
<hr />