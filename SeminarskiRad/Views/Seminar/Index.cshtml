@model IEnumerable<SeminarskiRad.Models.ViewModels.SeminarViewModel>

@{
    ViewBag.Title = "Seminari";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Seminari</h2>

<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NazivSeminara)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OpisSeminara)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatumSeminara)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BrMjesta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PreostalaMjesta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Popunjen)
        </th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="6" class="text-center">
                <br />
                <h3><b>Traženi unos nije pronađen</b></h3>
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    <b>@Html.DisplayFor(modelItem => item.NazivSeminara)</b>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OpisSeminara)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DatumSeminara)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BrMjesta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PreostalaMjesta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Popunjen)
                </td>
                <td>
                    @Html.ActionLink("Uredi", "Edit", new { id = item.IdSeminar }) |
                    @Html.ActionLink("Detalji", "Details", new { id = item.IdSeminar }) |
                    @Html.ActionLink("Obriši", "Delete", new { id = item.IdSeminar })
                </td>
            </tr>
        }
    }
</table>
<hr />
@Html.Partial("_SeminarSearch")
<hr />