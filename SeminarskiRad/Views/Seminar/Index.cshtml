@model IEnumerable<SeminarskiRad.Models.Seminar>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Seminari</h2>
<hr />
@Html.Partial("_SeminarSearch")
<hr />
<p>

   @Html.ActionLink("Novi seminar", "Create", new { type = "button", @class = "btn btn-primary" })
</p>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Opis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Datum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BrojPolaznika)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Popunjen)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Naziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Opis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Datum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BrojPolaznika)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Popunjen)
        </td>
        <td>
            @Html.ActionLink("Uredi", "Edit", new { id=item.IdSeminar }) |
            @Html.ActionLink("Detalji", "Details", new { id=item.IdSeminar }) |
            @Html.ActionLink("Obriši", "Delete", new { id=item.IdSeminar })
        </td>
    </tr>
}

</table>
